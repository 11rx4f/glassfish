<network-config>
    <transports>
        <transport name="tcp-1" io-strategy="org.glassfish.grizzly.strategies.SameThreadIOStrategy" />
        <transport name="tcp-2" io-strategy="org.glassfish.grizzly.strategies.NonExistingIOStrategy" />
    </transports>
    <protocols>
        <protocol name="http">
            <http enable-comet-support="true"/>
        </protocol>
    </protocols>
    <network-listeners>
        <thread-pool name="defaultThreadPool"/>
        <network-listener name="http-listener-1" port="38082" transport="tcp-1" protocol="http" thread-pool="defaultThreadPool"/>
        <network-listener name="http-listener-2" port="38083" transport="tcp-2" protocol="http" thread-pool="defaultThreadPool"/>
    </network-listeners>
</network-config>
