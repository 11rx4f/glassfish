<service-config>

    <config-bundle location="domain/resources" replace-if-exist="false">
        <configuration-element config-bean-class-name="org.glassfish.concurrent.config.ContextService">
<![CDATA[
    <context-service jndi-name="concurrent/__defaultContextService" object-type="system-all">
    </context-service>
]]>
        </configuration-element>
    </config-bundle>

    <config-bundle location="domain/servers/server[$CURRENT_INSTANCE_SERVER_NAME]" replace-if-exist="false">
        <configuration-element config-bean-class-name="com.sun.enterprise.config.serverbeans.ResourceRef">
<![CDATA[
    <resource-ref ref="concurrent/__defaultContextService"/>
]]>
        </configuration-element>
    </config-bundle>
</service-config>
