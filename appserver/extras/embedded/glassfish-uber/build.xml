<project name="glassfish-uberjar" basedir="." default="all">

    <target name="all">
        <taskdef name="unjar" classname="org.jvnet.maven.plugin.antrun.UnJarTask"/>
        <unjar dest="target/classes/modules/@filebasename@_jar">
            <fileset dir="target/module_jars/glassfish5/glassfish/modules">
                <include name="*.jar"/>
            </fileset>
        </unjar>
        <unjar dest="target/classes/modules/autostart/@filebasename@_jar">
            <fileset dir="target/module_jars/glassfish5/glassfish/modules/autostart">
                <include name="*.jar"/>
            </fileset>
        </unjar>
        <unjar dest="target/classes/modules/endorsed/@filebasename@_jar">
            <fileset dir="target/module_jars/glassfish5/glassfish/modules/endorsed">
                <include name="*.jar"/>
            </fileset>
        </unjar>
    </target>

</project>

