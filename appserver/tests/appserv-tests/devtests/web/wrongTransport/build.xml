<!DOCTYPE project [
        <!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
        ]>

<project name="wrongTransport" default="all" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;

    <import file="../reportbuilder.xml"/>

    <target name="all" depends="build,init-common,prepare-truststore-common">
        <java classname="wrongtransport.HttpRedirectElement" classpathref="reportbuilder.class.path" fork="true">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${https.port}"/>
            <arg value="${truststore.db.file}"/>
        </java>

        <!-- old style redirects -->
        <java classname="wrongtransport.WrongTransport" classpathref="reportbuilder.class.path" fork="true">
            <arg value="${http.host}"/>
            <arg value="${http.port}"/>
            <arg value="${truststore.db.file}"/>
        </java>
        <java classname="wrongtransport.WrongTransportSSL" classpathref="reportbuilder.class.path" fork="true">
            <arg value="${http.host}"/>
            <arg value="${https.port}"/>
            <arg value="${truststore.db.file}"/>
        </java>
    </target>

    <target name="usage">
        <antcall target="usage-common"/>
    </target>
</project>
