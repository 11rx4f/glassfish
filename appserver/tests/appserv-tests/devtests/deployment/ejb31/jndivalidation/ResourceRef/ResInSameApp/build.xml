<!ENTITY commonBuild SYSTEM "./../../../../config/common.xml">
]>

<project name="deployment-ejb31-jndivalidation-resourceref-ResInSameApp-App" default="all" basedir=".">

    &commonBuild;

    <property name="testName" value="deployment-ejb31-jndivalidation-resourceref-ResInSameApp"/>
    <property name="archivedir" value="${build}/archives"/>
    <property name="contextroot" value="${testName}"/>

    <target name="prepare" depends="init">
        <mkdir dir="${build}"/>
        <mkdir dir="${archivedir}"/>
        <property name="web.war" value="${archivedir}/${testName}-web.war"/>
    </target>

    <target name="compile" depends="prepare">
        <javac srcdir="webModule/src" destdir="${build}" debug="on" failonerror="true">
         <classpath refid="gfv3.classpath"/>
         </javac>
    </target>

    <target name="assemble" depends="compile">
        <war destfile="${web.war}" needxmlfile="false">
            <classes dir="${build}" excludes="**/*.jar,**/*EJB.class,**/FooManagedBean.class"/>
        </war>
    </target>

    <target name="deploy.jms.queue" depends="prepare">
        <antcall target="common.create.jms.resource">
            <param name="dest.type" value="queue"/>
            <param name="dest.name" value="deployment_jndivalidation_queue"/>
            <param name="res.type" value="jakarta.jms.Queue"/>
            <param name="jms.resource.name" value="jms/deployment_jndivalidation_queue"/>
        </antcall>
    </target>

    <target name="undeploy.jms.queue" depends="prepare">
        <antcall target="common.delete.jms.resource">
            <param name="jms.resource.name" value="jms/deployment_jndivalidation_queue"/>
            <param name="dest.type" value="queue"/>
            <param name="dest.name" value="deployment_jndivalidation_queue"/>
        </antcall>
    </target>

    <target name="deploy.asadmin" depends="assemble">
        <property name="arg.list" value="deploy ${ASADMIN-ARGS} --retrieve ${archivedir} --name ${testName}-app ${web.war}"/>
        <echo message="${ASADMIN} ${arg.list}"/>
        <exec executable="${ASADMIN}" resultproperty="return.code" failonerror="false">
           <arg line="${arg.list}"/>
        </exec>
        <condition property="deploy.failed" value="0">
            <equals arg1="0" arg2="${return.code}" />
        </condition>
        <condition property="deploy.failed" value="1">
            <not>
                <equals arg1="0" arg2="${return.code}" />
            </not>
        </condition>
        <antcall target="processResult">
            <param name="result" value="${deploy.failed}"/>
        </antcall>
    </target>

    <target name="undeploy.asadmin" depends="prepare">
        <antcall target="common.undeploy.asadmin">
            <param name="arg.list" value="${testName}-app"/>
            <param name="testName" value="${testName}-app"/>
        </antcall>
    </target>

    <target name="private-all">
        <antcall target="declare-test">
            <param name="description" value="ejb31/jndivalidation/resourceref/ResInSameApp Test asadmin deploy"/>
        </antcall>
        <antcall target="deploy.jms.queue"/>
        <antcall target="deploy.asadmin"/>
        <antcall target="undeploy.asadmin"/>
        <antcall target="undeploy.jms.queue"/>
    </target>

</project>
