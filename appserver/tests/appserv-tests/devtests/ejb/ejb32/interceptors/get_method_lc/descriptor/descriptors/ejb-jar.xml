<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd" xmlns="http://xmlns.jcp.org/xml/ns/javaee">
  <interceptors>
    <interceptor>
      <interceptor-class>com.acme.InterceptorA</interceptor-class>
      <around-invoke>
        <class>com.acme.InterceptorA</class>
        <method-name>interceptCall</method-name>
      </around-invoke>
      <around-construct>
        <lifecycle-callback-class>com.acme.InterceptorA</lifecycle-callback-class>
        <lifecycle-callback-method>create</lifecycle-callback-method>
      </around-construct>
      <post-construct>
        <lifecycle-callback-class>com.acme.InterceptorA</lifecycle-callback-class>
        <lifecycle-callback-method>afterCreation</lifecycle-callback-method>
      </post-construct>
      <pre-destroy>
        <lifecycle-callback-class>com.acme.InterceptorA</lifecycle-callback-class>
        <lifecycle-callback-method>preDestroy</lifecycle-callback-method>
      </pre-destroy>
    </interceptor>
    <interceptor>
      <interceptor-class>com.acme.InterceptorC</interceptor-class>
      <around-invoke>
        <class>com.acme.InterceptorC</class>
        <method-name>interceptCall</method-name>
      </around-invoke>
      <around-construct>
        <lifecycle-callback-class>com.acme.InterceptorC</lifecycle-callback-class>
        <lifecycle-callback-method>create</lifecycle-callback-method>
      </around-construct>
      <post-construct>
        <lifecycle-callback-class>com.acme.InterceptorC</lifecycle-callback-class>
        <lifecycle-callback-method>afterCreation</lifecycle-callback-method>
      </post-construct>
      <pre-destroy>
        <lifecycle-callback-class>com.acme.InterceptorC</lifecycle-callback-class>
        <lifecycle-callback-method>preDestroy</lifecycle-callback-method>
      </pre-destroy>
    </interceptor>
    <interceptor>
      <interceptor-class>com.acme.InterceptorB</interceptor-class>
      <around-invoke>
        <class>com.acme.InterceptorB</class>
        <method-name>interceptCall</method-name>
      </around-invoke>
      <around-construct>
        <lifecycle-callback-class>com.acme.InterceptorB</lifecycle-callback-class>
        <lifecycle-callback-method>create</lifecycle-callback-method>
      </around-construct>
      <post-construct>
        <lifecycle-callback-class>com.acme.InterceptorB</lifecycle-callback-class>
        <lifecycle-callback-method>afterCreation</lifecycle-callback-method>
      </post-construct>
      <pre-destroy>
        <lifecycle-callback-class>com.acme.InterceptorB</lifecycle-callback-class>
        <lifecycle-callback-method>preDestroy</lifecycle-callback-method>
      </pre-destroy>
    </interceptor>
  </interceptors>
  <assembly-descriptor>
    <interceptor-binding>
      <ejb-name>SfulEJB</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorB</interceptor-class>
      </interceptor-order>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SfulEJB</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorB</interceptor-class>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>hello</method-name>
        <method-params/>
      </method>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SfulEJB</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorB</interceptor-class>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>remove</method-name>
        <method-params/>
      </method>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SlessEJB3</ejb-name>
      <interceptor-class>com.acme.InterceptorA</interceptor-class>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SlessEJB3</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
        <interceptor-class>com.acme.InterceptorB</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>sayHello</method-name>
        <method-params/>
      </method>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SingletonBean</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
      </interceptor-order>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SingletonBean</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
        <interceptor-class>com.acme.InterceptorC</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>hello</method-name>
        <method-params/>
      </method>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SlessEJB</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
      </interceptor-order>
    </interceptor-binding>
    <interceptor-binding>
      <ejb-name>SlessEJB</ejb-name>
      <interceptor-order>
        <interceptor-class>com.acme.InterceptorA</interceptor-class>
        <interceptor-class>com.acme.InterceptorB</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>sayHello</method-name>
        <method-params/>
      </method>
    </interceptor-binding>
  </assembly-descriptor>
</ejb-jar>
